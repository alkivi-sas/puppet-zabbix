# This is config file for ZABBIX server process
# To get more information about ZABBIX, 
# go http://www.zabbix.com

############ GENERAL PARAMETERS #################

# IP address (or hostname) of ZABBIX servers. 

Server=<%= @server %>

# Server port for sending active checks

ServerPort=<%= @serverPort %>

# Unique hostname.

Hostname=<%= @hostname %>

# Number of pre-forked instances of pollers
# Default value is 5
# This parameter must be between 0 and 255
StartPollers=<%= @startPollers %>

# Number of pre-forked instances of IPMI pollers
# Default value is 0
# This parameter must be between 0 and 255
StartIPMIPollers=<%= @startIPMIPollers %>

# Number of pre-forked instances of pollers for unreachable hosts
# Default value is 1
# This parameter must be between 0 and 255
StartPollersUnreachable=<%= @startPollersUnreachable %>

# Number of pre-forked instances of trappers
# Default value is 5
# This parameter must be between 0 and 255
StartTrappers=<%= @startTrappers %>

# Number of pre-forked instances of ICMP pingers
# Default value is 1
# This parameter must be between 0 and 255
StartPingers=<%= @startPingers %>

# Number of pre-forked instances of discoverers
# Default value is 1
# This parameter must be between 0 and 255
StartDiscoverers=<%= @startDiscoverers %>

# Number of pre-forked instances of HTTP pollers
# Default value is 1
# This parameter must be between 0 and 255
StartHTTPPollers=<%= @startHTTPPollers %>

# Listen port for trapper. Default port number is 10051. This parameter 
# must be between 1024 and 32767
ListenPort=<%= @listenPort %>

# Source IP address for outgouing connections
<% if @sourceIP %>#SourceIP=<%= @sourceIP %><% end %>

# Listen interface for trapper. Trapper will listen all network interfaces
# if this parameter is missing.
<% if @listenIP %>#ListenIP=<%= @listenIP %><% end %>

# How often ZABBIX will perform sending hearbeat message
# (in seconds)
# Default value is 60 seconds
# Set to 0 to disable heartbeat messages
# This parameter must be between 0 and 3600
HeartbeatFrequency=<%= @heartbeatFrequency %>

# How often ZABBIX will perform sync configuration data
# (in seconds)
# Default value is 3600 seconds (1h)
# This parameter must be between 1 and 604800 (1 week)
ConfigFrequency=<%= @configFrequency %>

# How often ZABBIX will perform housekeeping procedure
# (in hours)
# Default value is 1 hour
# Housekeeping is removing unnecessary information from
# tables history, alert, and alarms
# This parameter must be between 1 and 24
HousekeepingFrequency=<%= @housekeepingFrequency %>

# How often ZABBIX will try to send unsent alerts
# (in seconds)
# Default value is 30 seconds
#SenderFrequency=<%= @senderFrequency %>

# Local bufer size in hours. Proxy will keep collected data N hours.
# Default value is 0 hours
ProxyLocalBuffer=<%= @proxyLocalBuffer %>

# Offline buffer size in hours. It is used when server is not available.
# Older data is removed.
# Default value is 1 hours
ProxyOfflineBuffer=<%= @proxyOfflineBuffer %>

# Specifies debug level
# 0 - debug is not created
# 1 - critical information
# 2 - error information
# 3 - warnings (default)
# 4 - for debugging (produces lots of information)
DebugLevel=<%= @debugLevel %>

# Specifies how long we wait for agent response (in sec)
# Must be between 1 and 30 
Timeout=<%= @timeout %>

# Specifies how many seconds trapper may spend processing new data
# Must be between 1 and 30 
TrapperTimeout=<%= @trapperTimeout %>

# After how many seconds of unreachability treat a host as unavailable
UnreachablePeriod=<%= @unreachablePeriod %>

# How ofter check host for availability during the unreachability period
UnavailableDelay=<%= @unavailableDelay %>

# Name of PID file
PidFile=<%= @pidFile  %>

# Name of log file
# If not set, syslog is used
LogFile=<%= @logFile %>

# Maximum size of log file in MB. Set to 0 to disable automatic log rotation.
<% if @logFileSize %>LogFileSize=<%= @logFileSize %><% end %>

# Location for custom alert scripts
#AlertScriptsPath=<%= @alertScriptsPath %>

# Location of external scripts
ExternalScripts=<%= @externalScripts %>

# Location of 'fping. Default is /usr/sbin/fping
# Make sure that fping binary has root permissions and SUID flag set
FpingLocation=<%= @fpingLocation %>

# Location of fping6. Default is /usr/sbin/fping6
# Make sure that fping binary has root permissions and SUID flag set
#Fping6Location=<%= @fping6Location %>

# Temporary directory. Default is /tmp
TmpDir=<%= @tmpDir %>

# Frequency of ICMP pings (item keys 'icmpping' and 'icmppingsec'). Defauls is 60 seconds.
#PingerFrequency=<%= @pingerFrequency %>

# Database host name
# Default is localhost

DBHost=<%= @dBHost %>

# Database name
# SQLite3 note: path to database file must be provided. DBUser and DBPassword are ignored.
DBName=<%= @dBName %>

# Database user

DBUser=<%= @dBUser %>

# Database password
# Comment this line if no password used

DBPassword=<%= @dBPassword %>

# Connect to MySQL using Unix socket?
#DBSocket=/tmp/mysql.sock

